/*헤더*/

#Header{width:100%; height:163px;  border-bottom:1px solid #d3d3d3;  }

#Header #Header-Con{width:1200px; height:80px; margin:0 auto;  font-family:dotum; font-size:14px; position:relative; }

/*로고 */
#Header #Header-Con p{float:left; margin-left:90px; margin-top:50px; font-size: 16px;}
#Header #Header-Con h1{width:113px; height:80px; margin:0 auto; padding-top:24px;  }
#Header #Header-Con ul#util-Menu{position:absolute; right:0; top:43px; width:300px;   }
#Header #Header-Con ul#util-Menu li{float:left; margin-left:10px; line-height:-150px}

#Header #Header-Con ul#util-Menu li a{display:block; font-size: 16px; color: #f8f8f8; font-weight: bold; letter-spacing: 0px; height: 27px; padding: 0 15px; line-height: 27px; border-radius: 25px; display: inline-block;}



#Header #Header-Con ul#util-Menu li.util-a a{background:#1175bc;}
#Header #Header-Con ul#util-Menu li.util-b a{background:#677482;}


/*GNB */
#Header #Navi{width:100% height:60px; margin:0 auto; margin-top:20px; z-index:10; border-top:1px solid #d3d3d3; border-bottom:3px solid #1176bc; }
#Header .Gnb{width:1200px; height:60px; margin:0 auto; z-index:10; clear:both; }
#Header .Gnb li{float:left; width:240px; height:60px;  }
#Header .Gnb li a{display:block; line-height:60px; text-align:center; font-size:20px; color:#000;}
#Header .Gnb li a:hover{color:#153cba; font-weight:bold; }






      