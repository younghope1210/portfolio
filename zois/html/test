    <script type="text/javascript">
    $(document).ready(function(){
         slider = $('#main_visual .bxslider').bxSlider({
            mode: 'fade',
            auto: true,
            autoControls: false,
          onSliderLoad : function(index){
              if(index == 0){
                        $(".visual01 .visual_text01").stop().delay(1000).animate({opacity: 1},1000);
                        $(".visual01 .visual_text02").stop().delay(1100).animate({opacity: 1},1200);
                }
            },
            onSlideAfter : function(slideElement, oldIndex, newIndex){
                if(newIndex == 0){
                        $(".bxslider li").eq(newIndex).find(".visual_text01").stop().animate({opacity: 1},1000);
                        $(".bxslider li").eq(newIndex).find(".visual_text02").stop().animate({opacity: 1},1200);
                }else if(newIndex == 1){ 
                        $(".bxslider li").eq(newIndex).find(".visual_text01").stop().animate({opacity: 1},1000);
                        $(".bxslider li").eq(newIndex).find(".visual_text02").stop().animate({opacity: 1},1200);
                }
                if(oldIndex == 0){
                        $(".bxslider li").eq(oldIndex).find(".visual_text01").stop().animate({opacity: 0},1000);
                        $(".bxslider li").eq(oldIndex).find(".visual_text02").stop().animate({opacity: 0},1200);
                }else if(oldIndex==1){
                        $(".bxslider li").eq(oldIndex).find(".visual_text01").stop().animate({opacity: 0},1000);
                        $(".bxslider li").eq(oldIndex).find(".visual_text02").stop().animate({opacity: 0},1200);
                }
            }
         });	

    });
    </script>
