@charset "utf-8";


#Wrapper{width:100%; height:auto; margin:0 auto; }
#Wrapper #Header{width:100%; height:495px; margin:0 auto; background:#1b53e6;}
#Wrapper #Header #Header-Con{width:1250px; height:573px; margin:0 auto; background:url(../images/visual.jpg) no-repeat; position:relative;  }

#Header #Header-Con h1{width:456px; height:593px; position:absolute; top:0; left:0; }
#Header #Header-Con #Header-Right-Con{width:770px; position:absolute; top:0; right:10px; border:1px solid red;}

#Header #Header-Con #Header-Right-Con #Gnb{width:100%; height:auto;  margin-top:50px;}
#Header #Header-Con #Header-Right-Con #Gnb li{height:30px; font-size:16px; float:left; margin-right:20px; margin-bottom:20px;}
#Header #Header-Con #Header-Right-Con #Gnb li a{display:block; color:#fff; text-align:center; padding:7px 15px; border:1px solid #fff; border-radius:20px}
#Header #Header-Con #Header-Right-Con #Gnb li a:hover{background:#fefb0f; color:#1b53e6;}
#Header #Header-Con #Header-Right-Con #Gnb li span{margin-left:10px;}

#Header #Header-Con #Header-Right-Con h2{clear:both; padding-top:120px; width:100%; }
#Header #Header-Con #Header-Right-Con h2 span{display:inline-block; width:100%; font-weight:bold; color:#fff; font-size:18px; text-align:center; margin-top:15px;}
	
	
#Container{width:100%; height:auto; marign:0 auto;  overflow:hidden;}
#Container #Contents{width:1200px; height:auto; margin:0 auto;}
#Container #Contents h3{font-size:36px; font-weight:bold; color:#000; width:auto; height:100px; margin:0 auto;  }	
#Container #Contents h3 img{display:block; width:84px; height:85px; float:left;}	
#Container #Contents h3 span{display:block; float:left; margin-top:15px; margin-left:10px;}
#Container #Contents h3 em{display:block;}
#Container #Contents h4{text-align:center; font-size:14px; font-weight:bold; color:#000;}

#Container #Contents .Web-Banner{clear:both; width:100%; height:auto; margin:0 auto; margin-top:100px; overflow:hidden; }
#Container #Contents .Web-Banner h3{width:530px; margin:0 auto; }
#Container #Contents .Web-Banner ul li{width:342px; height:371px; float:left; margin-left:42px; margin-top:40px; }

#Container #Contents .Variety-Banner{width:100%; height:auto; margin:0 auto; overflow:hidden; }
#Container #Contents .Variety-Banner h3{width:380px; margin:0 auto; margin-top:50px;}
#Container #Contents .Variety-Banner ul li{width:545px; height:209px; float:left; margin-left:36px; margin-top:30px; }
		
#Container #Contents .Process-Info{width:100%; height:auto; margin:0 auto; overflow:hidden; }
#Container #Contents .Process-Info h3{width:450px; margin:0 auto; margin-top:50px;}
#Container #Contents .Process-Info p{width:1155px; height:607px; margin:0 auto; }

		
#Container .Customer{width:100%; height:323px; background:#1b53e6; margin:0 auto; margin-top:80px;}
#Container .Customer .Customer-Con{width:1200px; height:323px; margin:0 auto; background:url(../images/customer.jpg) no-repeat; position:relative;}
#Container .Customer .Customer-Con p{width:392px; height:390px;  position:absolute; top:-68px; left:0;}
#Container .Customer .Customer-Con  ul{width:800px; height:150px; position:absolute; bottom:60px; right:0;}
#Container .Customer .Customer-Con  ul li{width:250px; font-weight:bold; color:#000; float:left; text-align:center; border-right:1px solid #000;}
#Container .Customer .Customer-Con  ul li img{display:block; width:22px; height:20px; margin:10px auto;}
#Container .Customer .Customer-Con  ul li span{display:block; font-size:30px;}
#Container .Customer .Customer-Con  ul li em{display:block; font-size:15px; margin-top:10px; padding-bottom:20px;}


#Footer{width:100%;  height:70px; margin:0 auto; overflow:hidden;}	
#Footer p.Copyright{text-align:center; line-height:70px; font-size:16px; color:#000;}

