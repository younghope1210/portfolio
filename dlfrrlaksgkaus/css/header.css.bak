/*메인 동영상 부분*/




/*헤더 시작 */
#Header-Con{width:1200px; height:100px;  margin:0 auto; }

/*로고 */
#Header-Con h1{width:193px; height:56px; float:left}

/*GNB 시작*/

#Gnb{width:895px; height:50px; float:right; border-bottom:2px solid #e92328;  }
#Gnb ul li.Category{width:175px; height:45px; float:left; text-align:center;line-height:20px; margin-top:10px; position:relative;}
#Gnb ul li.Category ul{display:none; width:175px;; height:auto; background:#e92328; margin-top:12px; padding:10px 0;  position:absolute; top:30px; left:0; }
#Gnb ul li.Category ul li{ height:30px; line-height:30px;  z-index:10;}
#Gnb ul li.Category ul li a{display:block; font-size:14px; color:#fff;}
#Gnb ul li.Category ul li a:hover{color:#fff; font-weight:bold;}
#Gnb ul li.Category a{display:block; width:100%; height:30px; font-size:20px; color:#000; }
#Gnb ul li.Category a:hover{color:#e92328;}



